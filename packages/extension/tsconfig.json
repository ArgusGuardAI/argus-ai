{
  "extends": "plasmo/templates/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*",
    ".plasmo/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
