# Argus Training Pipeline Configuration
# Copy to .env and modify as needed

# File paths (relative to scripts directory)
ARGUS_RAW_TOKENS_FILE=./data/raw-tokens.jsonl
ARGUS_LABELED_FILE=./data/labeled-tokens.jsonl
ARGUS_TRAINING_FILE=./data/training-large.jsonl
ARGUS_RUGS_FILE=./data/rugs-found.jsonl
ARGUS_HISTORICAL_FILE=./data/historical-labeled.jsonl

# DexScreener rate limits
# Default: 200ms = 5 req/sec (under DexScreener's 300 req/min limit)
ARGUS_REQUEST_DELAY_MS=200
ARGUS_BATCH_SIZE=50

# Outcome thresholds
ARGUS_RUG_PRICE_DROP=90       # >90% price drop = rug
ARGUS_RUG_LIQ_MIN=100         # <$100 liquidity = rug
ARGUS_STABLE_AGE_HOURS=48     # Must survive 48h to be "stable"
ARGUS_STABLE_LIQ_MIN=1000     # Must have >$1k liquidity to be stable

# Loop mode timing (for --mode=loop)
ARGUS_LOOP_FETCH_DELAY=30000  # 30 seconds between fetch and outcomes
ARGUS_LOOP_CYCLE_DELAY=120000 # 2 minutes between cycles
