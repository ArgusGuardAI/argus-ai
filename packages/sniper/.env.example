# Helius RPC URL (get free API key at https://helius.dev)
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY_HERE

# Or just the API key
HELIUS_API_KEY=YOUR_API_KEY_HERE

# Security Check Mode
# 'api' (default) - Uses FREE APIs (RugCheck, Birdeye) - no Helius needed
# 'rpc' - Uses Solana RPC (requires Helius or similar)
# 'skip' - Skips all security checks
SECURITY_MODE=api

# Birdeye API Key (optional - for backup when RugCheck is rate limited)
# Get free key at https://birdeye.so
BIRDEYE_API_KEY=

# Use Public RPC (when Helius quota is exhausted)
# WARNING: Public RPC is heavily rate limited
USE_PUBLIC_RPC=false

# Together AI API Key (for AI analysis)
TOGETHER_AI_API_KEY=
