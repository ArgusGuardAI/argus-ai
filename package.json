{
  "name": "argusguard",
  "version": "1.0.0",
  "private": true,
  "description": "AI-Powered Security Layer for Solana - Detect Rugs, Bundles, and Scams",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:extension": "pnpm --filter @argusguard/extension dev",
    "dev:workers": "pnpm --filter @argusguard/workers dev",
    "build:extension": "pnpm --filter @argusguard/extension build",
    "build:workers": "pnpm --filter @argusguard/workers build",
    "deploy:workers": "pnpm --filter @argusguard/workers deploy"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
